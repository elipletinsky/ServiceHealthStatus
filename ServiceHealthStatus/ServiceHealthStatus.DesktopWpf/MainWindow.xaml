        <DataTemplate x:Key="StatusButtonTemplate">
            <Grid Width="20" Height="20" >
                <ContentControl Name="unprobed" ContentTemplate="{StaticResource UnprobedStatus}" Visibility="Collapsed"/>
                <ContentControl Name="inprogress" ContentTemplate="{StaticResource InProgressStatus}" Visibility="Collapsed"/>
                <ContentControl Name="success" ContentTemplate="{StaticResource SuccessStatus}" Visibility="Collapsed"/>
                <ContentControl Name="failure" ContentTemplate="{StaticResource FailureStatus}" Visibility="Collapsed"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Unprobed">
                    <Setter TargetName="unprobed" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="InProgress">
                    <Setter TargetName="inprogress" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Success">
                    <Setter TargetName="success" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Failure">
                    <Setter TargetName="failure" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

